@using Sandbox;
@using Sandbox.UI;
@using System;

@namespace Sandbox
@inherits RootPanel
@attribute [StyleSheet]

<root>
    <ChatBox/>
    <VoiceList/>

    <div class="header">
        <label></label>
        <label class="subtitle"></label>
    </div>
</root>

@code
{
